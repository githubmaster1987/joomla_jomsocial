<?xml version="1.0" encoding="utf-8"?>
<extension version="3.4" type="module" client="site" method="upgrade">
	<name>JS Groups</name>
	<author>iJoomla</author>
	<creationDate>April 2015</creationDate>
	<copyright>Copyright (C) 2008 - 2015 iJoomla. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support@jomsocial.com</authorEmail>
	<authorUrl>http://jomsocial.com</authorUrl>
	<version>4.2.4</version>
	<description>Groups module for JomSocial</description>
	<files>
		<filename module="mod_community_groups">mod_community_groups.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
        <filename>mod_community_groups.xml</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
	</files>
    <languages>
        <language tag="en-GB">en-GB.mod_community_groups.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="displaysetting" type="list" class="btn-group btn-group-yesno" default="0" label="MOD_COMMUNITY_GROUPS_DISPLAY_SETTINGS" description="MOD_COMMUNITY_GROUPSCALENDAR_DISPLAY_SETTINGS_TIPS">
                    <option value="0">MOD_COMMUNITY_GROUPS_ALLGROUPS_OPTIONS</option>
                    <option value="1">MOD_COMMUNITY_GROUPS_MYGROUPS_OPTIONS</option>
                </field>
                <field name="filter_by" type="list" class="btn-group btn-group-yesno" default="0" label="MOD_COMMUNITY_GROUPS_FILTERBY_SETTINGS" description="MOD_COMMUNITY_GROUPS_FILTERBY_SETTINGS_TIPS">
                    <option value="0">MOD_COMMUNITY_GROUPS_AVAILABLE_OPTIONS</option>
                    <option value="1">MOD_COMMUNITY_GROUPS_FEATURED_OPTIONS</option>
                </field>
                <field name="limit" type="text" default="5" label="MOD_COMMUNITY_GROUPS_LIMIT_SETTINGS_SETTINGS" description="MOD_COMMUNITY_GROUPS_FILTERBY_SETTINGS_TIPS" />
            </fieldset>
            <fieldset name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
                <field
                        name="moduleclass_sfx"
                        type="textarea"
                        rows="3"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                <field
                        name="cache"
                        type="list"
                        default="0"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC"
                        >
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
            </fieldset>
        </fields>
    </config>
    <languages>
        <language tag="en-GB">en-GB.mod_community_groups.ini</language>
    </languages>
</extension>
